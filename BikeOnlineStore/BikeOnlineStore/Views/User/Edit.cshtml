@{
    Layout = "~/Views/Shared/_FuncLayout.cshtml";
}

@model User
<form method="post" asp-action="Edit" style="width:25%; margin:auto">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Изменение данных о пользователе</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label>Фамилия</label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname"></span>
        </div>
        <div class="mb-3">
            <label>Имя</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="mb-3">
            <label>Отчество</label>
            <input asp-for="Patronymic" class="form-control" />
            <span asp-validation-for="Patronymic"></span>
        </div>
        <div class="mb-3">
            <label>Никнейм</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username"></span>
        </div>
        <div class="mb-3">
            <label>Пароль</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>
        <table>
            <tr>
                <td style="width:50%; padding-right:10px">
                    <div class="mb-3">
                        <label>Номер телефона</label>
                        <input asp-for="PhoneHumber" class="form-control" />
                        <span asp-validation-for="PhoneHumber"></span>
                    </div>
                </td>
                <td style="padding-left:10px">
                    <div class="mb-3">
                        <label>Роль</label>
                        <input asp-for="Role" class="form-control" />
                        <span asp-validation-for="Role"></span>
                    </div>
                </td>
            </tr>
        </table>
        <button type="submit" class="btn btn-primary" style="width:200px">Применить</button>
        <a asp-controller="User" asp-action="Index" class="btn btn-secondary" style="width:150px">Отмена</a>
    </div>
</form>