@{
    Layout = "~/Views/Shared/_FuncLayout.cshtml";
}

@model UserLogin
<form method="post" asp-action="Login" style="width:30%; margin:auto">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Вход</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label>Никнейм</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username"></span>
        </div>
        <div class="mb-3">
            <label>Пароль</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Войти</button>
        <a asp-controller="User" asp-action="Register" class="btn btn-secondary" style="width:200px">Зарегистрироваться</a>
    </div>
</form>