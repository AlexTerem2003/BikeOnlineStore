@{
    Layout = "~/Views/Shared/_FuncLayout.cshtml";
}

@model User
<form method="post" asp-action="Register" style="width:30%; margin:auto">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Регистрация</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label>Фамилия</label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname"></span>
        </div>
        <div class="mb-3">
            <label>Имя</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="mb-3">
            <label>Отчество</label>
            <input asp-for="Patronymic" class="form-control" />
            <span asp-validation-for="Patronymic"></span>
        </div>
        <div class="mb-3">
            <label>Номер телефона</label>
            <input asp-for="PhoneHumber" class="form-control" />
            <span asp-validation-for="PhoneHumber"></span>
        </div>
        <div class="mb-3">
            <label>Никнейм</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username"></span>
        </div>
        <div class="mb-3">
            <label>Пароль</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:200px">Зарегистрироваться</button>
        <a asp-controller="User" asp-action="Login" class="btn btn-secondary" style="width:150px">Войти</a>
    </div>
</form>