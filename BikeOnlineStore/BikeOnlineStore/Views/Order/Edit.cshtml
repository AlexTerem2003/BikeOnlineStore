@{
    Layout = "~/Views/Shared/_FuncLayout.cshtml";
}

@model Order
<form method="post" asp-action="Edit" style="width:25%; margin:auto">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Изменение данных о заказе</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label>Время и дата</label>
            <input asp-for="OrderDateTime" class="form-control" />
            <span asp-validation-for="OrderDateTime"></span>
        </div>
        <div class="mb-3">
            <label>Статус</label>
            <input asp-for="Status" class="form-control" />
            <span asp-validation-for="Status"></span>
        </div>
        <div class="mb-3">
            <label>Адрес доставки</label>
            <input asp-for="DeliveryAddress" class="form-control" />
            <span asp-validation-for="DeliveryAddress"></span>
        </div>
        <div class="mb-3">
            <label>Id пользователя</label>
            <input asp-for="UserId" class="form-control" />
            <span asp-validation-for="UserId"></span>
        </div>
        <div class="mb-3">
            <label>Список велосипедов</label>
            <input asp-for="BikeList" class="form-control" />
            <span asp-validation-for="BikeList"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:200px">Применить</button>
        <a asp-controller="Order" asp-action="Index" class="btn btn-secondary" style="width:150px">Отмена</a>
    </div>
</form>